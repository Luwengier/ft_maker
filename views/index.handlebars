<div class="container">

  <div class="row">
    <h1 class="mx-auto my-4 font-weight-bold text-white">你想對誰說幹話?</h1>
  </div>

  <form method="POST" action="/">
    <div class="card-deck">
      <div class="card">
        <div class="card-img-top img-hei img1"></div>
        <div class="mx-auto my-3">
          <input class="form-check-input" type="radio" name="career" id="career1" value="engineer"
            {{#if judge.engineer}} checked {{/if}}>
          <label class="form-check-label" for="career1">
            Engineer
          </label>
        </div>
      </div>

      <div class="card">
        <div class="card-img-top img-hei img2"></div>
        <div class="mx-auto my-3">
          <input class="form-check-input" type="radio" name="career" id="career2" value="designer"
            {{#if judge.designer}} checked {{/if}}>
          <label class="form-check-label" for="career2">
            Designer
          </label>
        </div>
      </div>

      <div class="card">
        <div class="card-img-top img-hei img3"></div>
        <div class="mx-auto my-3">
          <input class="form-check-input" type="radio" name="career" id="career3" value="entrepreneur"
            {{#if judge.entrepreneur}} checked {{/if}}>
          <label class="form-check-label" for="career3">
            Entrepreneur
          </label>
        </div>
      </div>

    </div>

    <div class="form-group row my-5">
      <div class="col-sm-2">
        <button type="submit" class="btn btn-primary">產生幹話</button>
      </div>
      <div class="col-sm-10">
        <textarea class="form-control text-info font-weight-bold text-center" id="exampleFormControlTextarea1"
          rows="3">{{#if nonsense}}{{nonsense}}{{/if}}</textarea>
      </div>
    </div>
  </form>
</div>